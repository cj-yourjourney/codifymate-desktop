{
  "name": "codifymate",
  "version": "0.1.0",
  "description": "Your AI Code Assistant",
  "author": "CJ Luo <cj@codifymate.com>",
  "homepage": "https://github.com/cj-yourjourney/codifymate-desktop",
  "main": "dist-electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cj-yourjourney/codifymate-desktop"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:redux-devtools\" \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:redux-devtools": "redux-devtools --hostname localhost --port 9000",
    "dev:next": "next dev --turbo",
    "dev:electron": "wait-on http://localhost:3000 && npm run build:electron && cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production next build && npm run build:electron",
    "build:electron": "tsc -p main/tsconfig.json",
    "predist": "node scripts/cleanup-dmg.js",
    "dist": "cross-env NODE_ENV=production npm run build && electron-builder",
    "dist:safe": "npm run predist && npm run dist",
    "publish": "cross-env NODE_ENV=production npm run build && electron-builder --publish=always",
    "draft": "cross-env NODE_ENV=production npm run build && electron-builder --publish=never",
    "start": "npm run build:electron && electron .",
    "clean": "rm -rf out .next dist-electron release dist"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "CodifyMate",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json",
      "!**/*.map"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "cj-yourjourney",
        "repo": "codifymate-desktop",
        "releaseType": "release"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "format": "ULFO",
      "sign": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publisherName": "CodifyMate"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "cross-env": "^10.0.0"
  }
}
