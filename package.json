{
  "name": "desktop",
  "version": "0.1.6",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:redux-devtools\" \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:redux-devtools": "redux-devtools --hostname localhost --port 9000",
    "dev:next": "next dev --turbo",
    "dev:electron": "wait-on http://localhost:3000 && npm run build:electron && cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production next build && npm run build:electron",
    "build:electron": "tsc -p main/tsconfig.json",
    "predist": "node scripts/cleanup-dmg.js",
    "dist": "cross-env NODE_ENV=production npm run build && electron-builder",
    "dist:safe": "npm run predist && npm run dist",
    "publish": "dotenv cross-env NODE_ENV=production npm run build && electron-builder --publish=always",
    "publish:draft": "dotenv cross-env NODE_ENV=production npm run build && electron-builder --publish=onTagOrDraft",
    "build:local": "cross-env NODE_ENV=production npm run build && electron-builder --config electron-builder.local.json",
    "release": "cross-env NODE_ENV=production npm run build && electron-builder --publish=never",
    "start": "npm run build:electron && electron .",
    "clean": "rm -rf out .next dist-electron release dist"
  },
  "build": {
    "appId": "com.codifymate.desktop",
    "productName": "CodifyMate",
    "artifactName": "${productName}-${arch}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json",
      "!**/*.map"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "cj-yourjourney",
        "repo": "codifymate-desktop",
        "releaseType": "release"
      }
    ],
    "mac": {
      "identity": "XIJIE LUO (WNR3CT68TB)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "afterSign": "scripts/notarize.js",
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@reduxjs/toolkit": "^2.8.2",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.534.0",
    "next": "15.4.1",
    "react": "19.1.0",
    "react-diff-view": "^3.3.2",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.2",
    "@eslint/eslintrc": "^3",
    "@redux-devtools/cli": "^3.0.4",
    "@redux-devtools/remote": "^0.9.5",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.8",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "daisyui": "^5.0.46",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^10.0.0",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  }
}
