{
  "name": "desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:redux-devtools\" \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:redux-devtools": "redux-devtools --hostname localhost --port 9000",
    "dev:next": "next dev --turbo",
    "dev:electron": "wait-on http://localhost:3000 && npm run build:electron && cross-env NODE_ENV=development electron .",
    "build": "next build && npm run build:electron",
    "build:electron": "tsc -p main/tsconfig.json",
    "predist": "node scripts/cleanup-dmg.js",
    "dist": "npm run build && electron-builder",
    "dist:safe": "npm run predist && npm run dist",
    "start": "npm run build:electron && electron .",
    "clean": "rm -rf out .next dist-electron release dist"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "Your App Name",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "format": "ULFO"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@reduxjs/toolkit": "^2.8.2",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.534.0",
    "next": "15.4.1",
    "react": "19.1.0",
    "react-diff-view": "^3.3.2",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@redux-devtools/cli": "^3.0.4",
    "@redux-devtools/remote": "^0.9.5",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.8",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "daisyui": "^5.0.46",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  }
}
