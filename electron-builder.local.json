{
  "appId": "com.codifymate.desktop",
  "productName": "CodifyMate",
  "artifactName": "${productName}-${arch}.${ext}",
  "directories": {
    "output": "release"
  },
  "files": [
    "out/**/*",
    "dist-electron/**/*",
    "node_modules/**/*",
    "package.json",
    "!**/*.map"
  ],
  "mac": {
    "identity": null,
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "target": "zip"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage"
  }
}
